@model List<EduPortal.Application.DTOs.ClassDto>
@{
    ViewData["Title"] = "Sınıflar";
}

@if (ViewBag.SuccessMessage != null)
{
    <div class="alert alert-success">
        <i class="fas fa-check-circle"></i> @ViewBag.SuccessMessage
    </div>
}

<div class="page-header">
    <p class="page-subtitle">Toplam @Model.Count sınıf</p>
    <br />
    <a asp-action="CreateClass" class="btn-action primary">
        <i class="fas fa-plus"></i> Yeni Sınıf Oluştur
    </a>
</div>

<br />
<div class="card">
    <div class="card-header">
        <h3>Sınıf Listesi</h3>
    </div>
    <div class="card-body">
        <table class="data-table">
            <thead>
                <tr>
                    <th>Sınıf Adı</th>
                    <th>Dönem</th>
                    <th>Derslik</th>
                    <th>Sorumlu Öğretmen</th>
                    <th>Öğrenci Sayısı</th>
                    <th>İşlem</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Any())
                {
                    @foreach (var c in Model)
                    {
                        <tr>
                            <td><strong>@c.Name</strong></td>
                            <td>@c.Semester</td>
                            <td>@(c.Room ?? "-")</td>
                            <td>@c.TeacherName</td>
                            <td><span class="badge badge-blue">@c.StudentCount</span></td>
                            <td>
                                <a asp-action="EditClass" asp-route-id="@c.Id" class="btn btn-ghost btn-sm" style="margin-right:4px;">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <form asp-action="DeleteClass" asp-route-id="@c.Id" method="post" style="display:inline;">
                                    <button type="submit" class="btn btn-ghost btn-sm" onclick="return confirm('Bu sınıfı silmek istediğinize emin misiniz?')">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="6" style="text-align:center; padding:40px; color:var(--text-muted);">
                            Henüz sınıf oluşturulmamış.
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>