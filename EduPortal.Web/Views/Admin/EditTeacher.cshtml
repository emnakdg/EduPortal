@model EduPortal.Web.ViewModels.Admin.EditTeacherViewModel
@{
    ViewData["Title"] = "Öğretmen Düzenle";
}

<div class="page-header">
    <p class="page-subtitle">Öğretmen bilgilerini düzenleyin</p>
    <a asp-action="Teachers" class="btn-action"><i class="fas fa-arrow-left"></i> Geri Dön</a>
</div>

<div class="card">
    <div class="card-header">
        <h3>Öğretmen Bilgileri</h3>
    </div>
    <div class="card-body" style="padding: 24px;">
        <form asp-action="EditTeacher" method="post">
            <input type="hidden" asp-for="Id" />
            <div class="form-grid">
                <div class="form-group">
                    <label asp-for="FullName"></label>
                    <input asp-for="FullName" class="form-input form-input-no-icon" />
                    <span asp-validation-for="FullName" style="color:var(--red); font-size:0.8rem;"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Email"></label>
                    <input asp-for="Email" class="form-input form-input-no-icon" readonly style="opacity:0.6; cursor:not-allowed;" />
                    <small style="color:var(--text-muted);">E-posta değiştirilemez</small>
                </div>
                <div class="form-group">
                    <label asp-for="Branch"></label>
                    <input asp-for="Branch" class="form-input form-input-no-icon" />
                    <span asp-validation-for="Branch" style="color:var(--red); font-size:0.8rem;"></span>
                </div>
            </div>
            <div style="margin-top: 20px;">
                <button type="submit" class="btn-action primary"><i class="fas fa-save"></i> Güncelle</button>
                <a asp-action="Teachers" class="btn-action" style="margin-left:8px;">İptal</a>
            </div>
        </form>
    </div>
</div>