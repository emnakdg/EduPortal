@model EduPortal.Web.ViewModels.Admin.EditClassViewModel
@{
    ViewData["Title"] = "Sınıf Düzenle";
    var teachers = ViewBag.Teachers as List<EduPortal.Application.DTOs.TeacherDto> ?? new();
}

<div class="page-header">
    <p class="page-subtitle">Sınıf bilgilerini düzenleyin</p>
    <a asp-action="Classes" class="btn-action"><i class="fas fa-arrow-left"></i> Geri Dön</a>
</div>

<div class="card">
    <div class="card-header">
        <h3>Sınıf Bilgileri</h3>
    </div>
    <div class="card-body" style="padding: 24px;">
        <form asp-action="EditClass" method="post">
            <input type="hidden" asp-for="Id" />
            <div class="form-grid">
                <div class="form-group">
                    <label asp-for="Name"></label>
                    <input asp-for="Name" class="form-input form-input-no-icon" />
                    <span asp-validation-for="Name" style="color:var(--red); font-size:0.8rem;"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Semester"></label>
                    <input asp-for="Semester" class="form-input form-input-no-icon" />
                    <span asp-validation-for="Semester" style="color:var(--red); font-size:0.8rem;"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Room"></label>
                    <input asp-for="Room" class="form-input form-input-no-icon" />
                </div>
                <div class="form-group">
                    <label asp-for="TeacherId"></label>
                    <select asp-for="TeacherId" class="form-input form-input-no-icon">
                        <option value="">-- Öğretmen Seçin --</option>
                        @foreach (var t in teachers)
                        {
                            <option value="@t.Id">@t.FullName (@t.Branch)</option>
                        }
                    </select>
                    <span asp-validation-for="TeacherId" style="color:var(--red); font-size:0.8rem;"></span>
                </div>
            </div>
            <div style="margin-top: 20px;">
                <button type="submit" class="btn-action primary"><i class="fas fa-save"></i> Güncelle</button>
                <a asp-action="Classes" class="btn-action" style="margin-left:8px;">İptal</a>
            </div>
        </form>
    </div>
</div>