@model EduPortal.Web.ViewModels.Admin.EditStudentViewModel
@{
    ViewData["Title"] = "Öğrenci Düzenle";
    var classes = ViewBag.Classes as List<EduPortal.Application.DTOs.ClassDto> ?? new();
}

<div class="page-header">
    <p class="page-subtitle">Öğrenci bilgilerini düzenleyin</p>
    <a asp-action="Students" class="btn-action"><i class="fas fa-arrow-left"></i> Geri Dön</a>
</div>

<div class="card">
    <div class="card-header">
        <h3>Öğrenci Bilgileri</h3>
    </div>
    <div class="card-body" style="padding: 24px;">
        <form asp-action="EditStudent" method="post">
            <input type="hidden" asp-for="Id" />
            <div class="form-grid">
                <div class="form-group">
                    <label asp-for="FullName"></label>
                    <input asp-for="FullName" class="form-input form-input-no-icon" />
                    <span asp-validation-for="FullName" style="color:var(--red); font-size:0.8rem;"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Email"></label>
                    <input asp-for="Email" class="form-input form-input-no-icon" readonly style="opacity:0.6; cursor:not-allowed;" />
                    <small style="color:var(--text-muted);">E-posta değiştirilemez</small>
                </div>
                <div class="form-group">
                    <label asp-for="StudentNumber"></label>
                    <input asp-for="StudentNumber" class="form-input form-input-no-icon" />
                    <span asp-validation-for="StudentNumber" style="color:var(--red); font-size:0.8rem;"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ClassId"></label>
                    <select asp-for="ClassId" class="form-input form-input-no-icon">
                        <option value="">-- Sınıf Seçin --</option>
                        @foreach (var cls in classes)
                        {
                            <option value="@cls.Id">@cls.Name - @cls.TeacherName</option>
                        }
                    </select>
                </div>
            </div>
            <div style="margin-top: 20px;">
                <button type="submit" class="btn-action primary"><i class="fas fa-save"></i> Güncelle</button>
                <a asp-action="Students" class="btn-action" style="margin-left:8px;">İptal</a>
            </div>
        </form>
    </div>
</div>