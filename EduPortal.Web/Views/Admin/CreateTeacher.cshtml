@model EduPortal.Web.ViewModels.Admin.CreateTeacherViewModel
@{
    ViewData["Title"] = "Yeni Öğretmen Ekle";
}

<div class="page-header">
    <p class="page-subtitle">Yeni öğretmen kaydı oluşturun</p>
    <br />
    <a asp-action="Teachers" class="btn-action"><i class="fas fa-arrow-left"></i> Geri Dön</a>
</div>

<br />
<div class="card">
    <div class="card-header">
        <h3>Öğretmen Bilgileri</h3>
    </div>
    <div class="card-body card-body-padded">
        <form asp-action="CreateTeacher" method="post">
            <div asp-validation-summary="ModelOnly" class="alert-error validation-summary @(ViewData.ModelState.ErrorCount > 0 ? "has-errors" : "")"></div>
            <div class="form-grid">
                <div class="form-group">
                    <label asp-for="FullName"></label>
                    <input asp-for="FullName" class="form-input form-input-no-icon" placeholder="Ahmet Yılmaz" />
                    <span asp-validation-for="FullName" class="validation-error"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Email"></label>
                    <input asp-for="Email" class="form-input form-input-no-icon" placeholder="ahmet@okul.com" />
                    <span asp-validation-for="Email" class="validation-error"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Password"></label>
                    <input asp-for="Password" type="password" class="form-input form-input-no-icon" placeholder="••••••••" />
                    <span asp-validation-for="Password" class="validation-error"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Branch"></label>
                    <input asp-for="Branch" class="form-input form-input-no-icon" placeholder="Matematik" />
                    <span asp-validation-for="Branch" class="validation-error"></span>
                </div>
            </div>
            <div class="form-actions">
                <button type="submit" class="btn-action primary"><i class="fas fa-save"></i> Kaydet</button>
                <a asp-action="Teachers" class="btn-action secondary">İptal</a>
            </div>
        </form>
    </div>
</div>