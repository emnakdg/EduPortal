@model EduPortal.Web.ViewModels.Admin.CreateStudentViewModel
@{
    ViewData["Title"] = "Yeni Öğrenci Ekle";
    var classes = ViewBag.Classes as List<EduPortal.Application.DTOs.ClassDto> ?? new();
}

<div class="page-header">
    <p class="page-subtitle">Yeni öğrenci kaydı oluşturun</p>
    <br />
    <a asp-action="Students" class="btn-action"><i class="fas fa-arrow-left"></i> Geri Dön</a>
</div>

<br />
<div class="card">
    <div class="card-header">
        <h3>Öğrenci Bilgileri</h3>
    </div>
    <div class="card-body" style="padding: 24px;">
        <form asp-action="CreateStudent" method="post">
            <div asp-validation-summary="ModelOnly" class="alert alert-error" style="display:@(ViewData.ModelState.ErrorCount > 0 ? "flex" : "none")"></div>
            <div class="form-grid">
                <div class="form-group">
                    <label asp-for="FullName"></label>
                    <input asp-for="FullName" class="form-input form-input-no-icon" placeholder="Ali Veli" />
                    <span asp-validation-for="FullName" style="color:var(--red); font-size:0.8rem;"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Email"></label>
                    <input asp-for="Email" class="form-input form-input-no-icon" placeholder="ali@okul.com" />
                    <span asp-validation-for="Email" style="color:var(--red); font-size:0.8rem;"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Password"></label>
                    <input asp-for="Password" type="password" class="form-input form-input-no-icon" placeholder="••••••••" />
                    <span asp-validation-for="Password" style="color:var(--red); font-size:0.8rem;"></span>
                </div>
                <div class="form-group">
                    <label asp-for="StudentNumber"></label>
                    <input asp-for="StudentNumber" class="form-input form-input-no-icon" placeholder="2024001" />
                    <span asp-validation-for="StudentNumber" style="color:var(--red); font-size:0.8rem;"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ClassId"></label>
                    <select asp-for="ClassId" class="form-input form-input-no-icon">
                        <option value="">-- Sınıf Seçin (Opsiyonel) --</option>
                        @foreach (var cls in classes)
                        {
                            <option value="@cls.Id">@cls.Name - @cls.TeacherName</option>
                        }
                    </select>
                </div>
            </div>
            <div style="margin-top: 20px;">
                <button type="submit" class="btn-action primary"><i class="fas fa-save"></i> Kaydet</button>
                <a asp-action="Students" class="btn-action" style="margin-left:8px;">İptal</a>
            </div>
        </form>
    </div>
</div>